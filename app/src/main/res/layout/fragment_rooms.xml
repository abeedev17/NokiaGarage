<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rooms.RoomsFragment">

    <ImageView
        android:id="@+id/media_lab_id"
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/media_lab_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="@string/media_lab" />

    <ImageView
        android:id="@+id/work_shop_id"
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/work_shop"
        android:adjustViewBounds="true"
        android:src="@drawable/work_shop_room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/media_lab_id" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reserve_medialab_id"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/reserve_room"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="@color/primary_blue"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/media_lab_id"
        app:layout_constraintEnd_toEndOf="@+id/media_lab_id"
        app:layout_constraintStart_toStartOf="@+id/media_lab_id"
        app:rippleColor="@color/nokia_blue"
        tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/reserve_workshop_id"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/reserve_room"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="@color/primary_blue"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/work_shop_id"
        app:layout_constraintEnd_toEndOf="@+id/work_shop_id"
        app:layout_constraintStart_toStartOf="@+id/work_shop_id"
        app:rippleColor="@color/nokia_blue"
        tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>